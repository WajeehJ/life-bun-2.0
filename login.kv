WindowManager:

    LoginScreen:
    SignUpScreen:
    TutorialOne:
    TutorialTwo:
    CustomizationScreen:
    HomeScreen:
    AddScreen:
    ToDoScreen:
    HabitScreen:


<MoneyBar@ProgressBar>:
    canvas:
        Color:
            rgba: (252/255.0),(238/255.0),(150/255.0), 1
        BorderImage:
            border: (12, 12, 12, 12)
            pos: self.x, self.center_y - 12
            size: self.width, 24
            source:
        BorderImage:
            border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 12))] * 4
            pos: self.x, self.center_y - 12
            size: self.width * (self.value / float(self.max)) if self.max else 0, 24
            source: 'Images/pb_fg.png'

<HealthBar@ProgressBar>:
    canvas:
        Color:
            rgba: 255/255, 182/255, 193/255, 1
        BorderImage:
            border: (12, 12, 12, 12)
            pos: self.x, self.center_y - 12
            size: self.width, 24
            source:
        BorderImage:
            border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 12))] * 4
            pos: self.x, self.center_y - 12
            size: self.width * (self.value / float(self.max)) if self.max else 0, 24
            source: 'Images/pb_fg.png'







<RoundedButton@Button>
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: 155/255, 155/255, 122/255, 1
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [65]

<RoundedSpinner@Spinner>
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: 155/255, 155/255, 122/255, 1
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [65]


<LoginScreen>:
    name: "login"
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.LoginButton()


        MDRoundFlatButton:
            text: "SIGN UP"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.root.current = "signup"


        Widget:
            size_hint_y: None
            height: 10

<SignUpScreen>:
    name: "signup"
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "SIGN UP"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        RoundedSpinner:
            id: time_zone
            text: "CST"
            values: ['CST','EST','MST','PT']
            background_normal: ''
            background_color: 149/255, 191/255, 133/255, 1
            font_size: 50

        MDRoundFlatButton:
            text: "LET'S GO!"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.create_user()

<TutorialOne>:
    name: "tutorialone"
    canvas.before:
        Color:
            rgba: 155/255, 155/255, 122/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MDLabel:
        text: "Welcome To"
        font_name: "fonts/ChelaOne-Regular.ttf"
        font_size: 130
        padding_y: 15
        pos_hint: {"center_x": .5, "center_y": .8}
        halign: 'center'
        color: 204/255, 213/255, 174/255, 1


    Image:
        source: "Images/logo.png"
        pos_hint: {"center_x": .5, "center_y": .4}

<TutorialTwo>:
    name: "tutorialtwo"
    canvas.before:
        Color:
            rgba: 155/255, 155/255, 122/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MDLabel:
        text: "Earn Coins for your New Friend!"
        font_name: "fonts/ChelaOne-Regular.ttf"
        font_size: 110
        padding_y: 15
        padding_x: 20
        pos_hint: {"center_x": .5, "center_y": .8}
        color: "white"

    MDLabel:
        text: "For every personal task/habit you complete, you earn coins to feed, bathe, and care for your lil creature"
        font_name: "fonts/Comfortaa-Regular.ttf"
        color: 	250/255, 237/255, 205/255, 2
        font_size: 35
        padding_y: 15
        pos_hint: {"center_x": .55, "center_y": .55}

    Image:
        source: "Images/coin bar.png"
        pos_hint: {"center_x": .5, "center_y": .3}
        allow_stretch: True

<CustomizationScreen>:
    name: "customization"
    canvas.before:
        Color:
            rgba: 204/255, 213/255, 174/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MDLabel:
        text: "Customize The Little Guy"
        font_size: 60
        padding_y: 15
        pos_hint: {"center_x": .55, "center_y": .9}
        font_name: "fonts/ChelaOne-Regular.ttf"
        color: "white"

    Image:
        id: bunny
        source: "Images/bunny.png"
        pos_hint: {"center_x": .5, "center_y": .65}
        size_hint: (0.7,0.7)

    GridLayout:
        size_hint: (1, 0.3)
        pos_hint: {"center_x": .5, "center_y": .3}
        spacing: 20
        rows: 2
        col: 2
        RoundedButton:
            text: "Christmas"
            background_normal: ''
            on_press: root.christmas()
            color: "white"
            font_name: "fonts/Comfortaa-Regular.ttf"

        RoundedButton:
            text: "Devil"
            background_normal: ''
            color: "white"
            on_press: root.devil()
            font_name: "fonts/Comfortaa-Regular.ttf"

        RoundedButton:
            text: "Wedding"
            background_normal: ''
            color: "white"
            on_press: root.wedding()
            font_name: "fonts/Comfortaa-Regular.ttf"

        RoundedButton:
            text: "Birthday"
            background_normal: ''
            color: "white"
            on_press: root.birthday()
            font_name: "fonts/Comfortaa-Regular.ttf"

    Button:
        text: "Done!"
        id: done
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": .5, "center_y": .07}
        background_normal: ''
        background_color: 155/255, 155/255, 122/255, 1
        color: "white"
        font_name: "fonts/ChelaOne-Regular.ttf"
        font_size: 60
        on_press:
            root.add_bunny()


<HomeScreen>:
    name: "home"
    canvas.before:
        Color:
            rgba: (	250/255, 237/255, 205/255, .9)
        Rectangle:
            pos: self.pos
            size: self.size
    on_enter:
        root.update_image()
        root.constant_health()
        root.update_poop()
    BoxLayout:
        orientation: "vertical"
        FloatLayout:
            size_hint: (1,.4)
            MoneyBar:
                id: money_bar
                min: 0
                max: 100
                size_hint_x: .4
                pos_hint: {"x": .5, "top": 1}
                value: 50
            Image:
                source: "Images/coin.png"
                pos_hint: {"x": .2, "top": .8}
                size_hint: (.5,.5)
        FloatLayout:
            size_hint: (1,.1)
            HealthBar:
                id: health_bar
                min: 0
                max: 100
                size_hint_x: .4
                pos_hint: {"x": .5, "top": 1}
                value: 20
            Image:
                source: "Images/heart.png"
                pos_hint: {"x": 0, "top": 1.25}
                size_hint: (1,1.5)
        FloatLayout:
            size_hint: (1, 2)
            Image:
                id: bunny_pic
                size_hint: (1, .8)
                pos_hint: {"y": .1}
                source: "Images/bunny.png"
            Image:
                id: bubbles
                size_hint: (1, .8)
                pos_hint: {"y": .1}
                opacity: 0
                source: "Images/bubbles.png"
            Image:
                id: poop1
                size_hint: (.2, .2)
                pos_hint: {"x": .1, "y": .05}
                opacity: 0
                source: "Images/poop.png"
            Image:
                id: poop2
                size_hint: (.2, .2)
                pos_hint: {"x": .6, "y": .05}
                opacity: 0
                source: "Images/poop.png"
            Image:
                id: poop3
                size_hint: (.2, .2)
                pos_hint: {"x": .7, "y": .05}
                opacity: 0
                source: "Images/poop.png"
        BoxLayout:
            size_hint: (1, .5)
            orientation: "horizontal"
            Button:
                text: "Bathe!"
                size: "40dp", "40dp"
                size_hint: 1, .4
                pos_hint: {"right": .3}
                on_press: root.take_bath()
                background_normal: ''
                background_color: 	204/255, 213/255, 174/255, 1
                font_name: "fonts/ChelaOne-Regular.ttf"
                font_size: 50
            Button:
                id: feed
                text: "Feed!"
                background_normal: ''
                background_color: 219/255, 225/255, 188/255, 1
                size_hint: 1, .4
                pos_hint: {"x": .3}
                on_press: root.feed()
                font_name: "fonts/ChelaOne-Regular.ttf"
                font_size: 50


<TodotaskCard>:
    elevation: 10
    md_bg_color: 1, 1, 1, 1
    radius: [8]

    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {"center_x": .02, "center_y": .5}
        md_bg_color: 222/255, 182/255, 138/255, 1
    MDLabel:
        text: "Task1"
        id: task_number
        markup: True
        font_size: "20sp"
        size_hint_x: .8
        pos_hint: {"center_x": .46, "center_y": .8}
    MDCheckbox:
        id: cbox
        size_hint: None, None
        size: "48dp", "48dp"
        unselected_color: 222/255, 182/255, 138/255, 1
        selected_color: 0, 179/255, 0, 1
        pos_hint: {"center_x": .95, "center_y": .6}
        on_release:
            root.completed_task(root)
    MDLabel:
        id: description
        text: "Buying Fruits"
        markup: True
        size_hint_x: .9
        line_height: .8
        pos_hint: {"center_x": .51, "center_y": .4}


<TodohabitCard>:
    elevation: 10
    md_bg_color: 1, 1, 1, 1
    radius: [8]

    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {"center_x": .02, "center_y": .5}
